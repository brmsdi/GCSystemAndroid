<resources>
    <!-- Base application theme. -->
    <style name="Theme.GCSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_1</item>
        <item name="colorPrimaryVariant">@color/pink_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_1</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pink_1</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="actionOverflowMenuStyle">@style/Theme.GCSystem.PopupOverlay3</item>
    </style>

    <style name="Theme.GCSystem.PopupOverlay3" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/pink_1</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="edit_text_colors">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">#dddd</item>
    </style>

    <style name="button_style">
        <item name="android:backgroundTint">@color/pink_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_cancel_style">
        <item name="android:backgroundTint">@color/white_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edit_code">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">#dddd</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">25sp</item>
        <item name="layout_constraintTop_toBottomOf">@id/text_description</item>
    </style>

    <style name="text_label_form">
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fields_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_form</item>
    </style>

    <style name="description_screen_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">10pt</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="icon_form">
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="icon_list">
        <item name="android:layout_width">@dimen/icon_list_width</item>
        <item name="android:layout_height">@dimen/icon_list_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/soft_yellow</item>
    </style>

    <style name="spinner_form">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fields_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_form</item>
        <item name="android:popupBackground">?android:windowBackground</item>
    </style>

    <style name="text_label_list">
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_list_data">
        <item name="android:textSize">@dimen/font_size_label</item>
        <item name="android:paddingBottom">@dimen/paddingBottom_item_data_list</item>
        <!--        <item name="android:textStyle">italic</item>-->
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="card_list">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/dark_background_1</item>
    </style>

    <style name="card_colors">
        <item name="android:backgroundTint">@color/dark_background_1</item>
    </style>

    <style name="floating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="floating_pdf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>
</resources>