<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragments.SendEmailFragment">

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_description_size"
        android:textColor="@color/white_1"
        android:gravity="start"
        android:layout_marginBottom="15dp"
        android:text="@string/description_screen_send_email_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_send_email"
        style="@style/edit_text_colors"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fields_height"
        android:drawableStart="@drawable/baseline_alternate_email_24"
        android:autofillHints="emailAddress"
        android:hint="@string/input_email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_elements"
        android:text="@string/authentication_type"
        android:textSize="16sp"/>

    <Spinner
        android:id="@+id/spinner_type_auth"
        style="@style/edit_text_colors"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fields_height"
        android:popupBackground="@color/blue_black" />

    <Button
        android:id="@+id/button_send_email"
        style="@style/button_colors"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/margin_top_elements"
        android:text="@string/text_send" />

</LinearLayout>