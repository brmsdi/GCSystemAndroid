<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_background"
    android:padding="16dp"
    tools:context=".ui.fragments.SendCodeFragment">

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="start"
        android:text="@string/description_screen_send_code"
        android:textColor="@color/white_1"
        android:textSize="@dimen/text_description_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_code_1"
        style="@style/edit_code"
        android:autofillHints=""
        app:layout_constraintEnd_toStartOf="@id/edit_code_2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_code_2"
        style="@style/edit_code"
        android:autofillHints=""
        app:layout_constraintEnd_toStartOf="@id/edit_code_3"
        app:layout_constraintStart_toEndOf="@+id/edit_code_1" />

    <EditText
        android:id="@+id/edit_code_3"
        style="@style/edit_code"
        android:autofillHints=""
        app:layout_constraintEnd_toStartOf="@id/edit_code_4"
        app:layout_constraintStart_toEndOf="@+id/edit_code_2" />

    <EditText
        android:id="@+id/edit_code_4"
        style="@style/edit_code"
        android:autofillHints=""
        app:layout_constraintEnd_toStartOf="@id/edit_code_5"
        app:layout_constraintStart_toEndOf="@+id/edit_code_3" />

    <EditText
        android:id="@+id/edit_code_5"
        style="@style/edit_code"
        android:autofillHints=""
        app:layout_constraintEnd_toStartOf="@id/edit_code_6"
        app:layout_constraintStart_toEndOf="@+id/edit_code_4" />

    <EditText
        android:id="@+id/edit_code_6"
        style="@style/edit_code"
        android:autofillHints=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_code_5" />

    <Button
        android:id="@+id/button_send"
        style="@style/button_colors"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/margin_top_elements"
        android:text="@string/confirm"
        app:layout_constraintTop_toBottomOf="@id/edit_code_4" />

</androidx.constraintlayout.widget.ConstraintLayout>